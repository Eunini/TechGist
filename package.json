        "babel-jest": "^29.7.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.34.0",
        "jest": "^29.7.0",
        "prettier": "^3.3.3",
        "supertest": "^7.1.1"
