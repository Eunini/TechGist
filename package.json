    "type": "module",
    "scripts": {
        "dev:api": "nodemon api/index.js",
        "dev:client": "npm run dev --prefix client",
        "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
        "setup": "npm install && npm install --prefix client",
        "start": "node api/index.js",
        "seed": "node api/seed.js",
        "build": "npm install && npm install --prefix client && npm run build --prefix client",
        "migrate": "node api/migrate.js",
        "reset:db": "cross-env FORCE_REBUILD=true node api/migrate.js",
        "lint": "eslint . --ext js,jsx --max-warnings=0",
        "format": "prettier --write .",
        "test:api": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand --detectOpenHandles"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
