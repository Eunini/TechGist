        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "express": "^4.21.2",
        "express-validator": "^7.2.1",
        "google-auth-library": "^9.15.1",
        "helmet": "^7.2.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "cloudinary": "^1.41.3",
        "nodemon": "^3.0.2",
        "pg": "^8.16.3",
        "pg-hstore": "^2.3.4",
        "sanitize-html": "^2.13.0",
